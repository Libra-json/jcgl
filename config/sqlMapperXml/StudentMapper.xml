<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xin.mapper.StudentMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xin.bean.Student">
		<id column="s_id" property="sId" />
		<result column="s_name" property="sName" />
		<result column="user_id" property="userId" />
		<result column="id_number" property="idNumber" />
		<result column="s_phone" property="sPhone" />
		<result column="s_content" property="sContent" />
		<result column="academy_id" property="academyId" />
		<result column="s_gradations" property="sGradations" />
		<result column="s_systme" property="sSystme" />
		<result column="s_date" property="sDate" />
	</resultMap>
	
	<sql id="Studentcolumn">
		s_name,user_id,id_number,s_phone,s_content,academy_id,s_gradations,s_systme,s_date
	</sql>
	
	<sql id="Studentproperty">
		sName,userId,idNumber,sPhone,sContent,academyId,sGradations,sSystme,sDate
	</sql>

	<insert id="insertByid" >
		INSERT INTO apply_type(<include refid="Studentcolumn" />) 
		VALUES(<include refid="Studentproperty"></include>)
	</insert>
	
	<select id="selectById" resultMap="BaseResultMap">
		SELECT * FROM student WHERE s_id = #{sId}
	</select>
	
	<delete id="deleteById">
		DELETE FROM student WHERE s_id = #{sId}
	</delete>
	
	<update id="updateById">
		UPDATE student SET 
			s_name = #{sName},
			user_id = #{userId},
			id_number = #{idNumber},
			s_phone = #{sPhone},
			s_content = #{sContent},
			academy_id = #{academyId},
			s_gradations = #{sGradations},
			s_systme = #{sSystme},
			s_date = #{sDate}
		 WHERE 
		 	s_id = #{sId}
	</update>
    
    <select id="selectPage" resultMap="BaseResultMap">
    	SELECT *
    	FROM student
    	<where>
    		<if test="name != null and name != '' ">
    			at_name = #{name}
    		</if>
    	</where>
    </select>
    

</mapper>
